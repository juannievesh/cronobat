        <TextView
            android:id="@+id/tvOverlayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/white"
            android:fontFamily="@font/dotgothic16"
            android:textSize="36sp"/>

        <TextView
            android:layout_width="wrap_content"
