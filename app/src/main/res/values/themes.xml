<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cronobat" parent="Theme.Material3.DayNight">
        <!-- Nothing-inspired monochrome mapping -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/nothing_surface</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>

        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/nothing_surface</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>

        <item name="colorSurface">@color/nothing_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/background_color</item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">@color/background_color</item>

        <!-- Component styles: flat, outlined -->
        <item name="materialCardViewStyle">@style/Widget.Cronobat.Card</item>
        <item name="materialButtonStyle">@style/Widget.Cronobat.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Cronobat.Button.Outlined</item>
    </style>

    <style name="Widget.Cronobat.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/nothing_surface</item>
        <item name="cardElevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeColor">@color/nothing_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearance">@style/Shape.Cronobat.Medium</item>
    </style>

    <style name="Widget.Cronobat.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/nothing_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/nothing_ripple</item>
        <item name="shapeAppearance">@style/Shape.Cronobat.Large</item>
    </style>

    <style name="Widget.Cronobat.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/nothing_black</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="rippleColor">@color/nothing_ripple</item>
        <item name="shapeAppearance">@style/Shape.Cronobat.Large</item>
    </style>

    <style name="Shape.Cronobat.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Shape.Cronobat.Large" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
</resources>
